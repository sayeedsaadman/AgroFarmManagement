@{
    ViewData["Title"] = "Login";
}

<style>
    /* ---------- Page + Background ---------- */
    body {
        margin: 0 !important;
        padding: 0 !important;
        min-height: 100vh;
        position: relative;
        overflow-x: hidden;
        font-family: system-ui, -apple-system, "Segoe UI", Roboto, sans-serif;
    }

        body::before {
            content: "";
            position: fixed;
            inset: 0;
            background: url("https://t4.ftcdn.net/jpg/02/21/34/43/360_F_221344370_divU4PPEj49VhfthdlnAxA3rD3TAzuZT.jpg") no-repeat center center fixed;
            background-size: cover;
            filter: blur(4px) saturate(0.9);
            transform: scale(1.03);
            z-index: -2;
        }

        body::after {
            content: "";
            position: fixed;
            inset: 0;
            background: radial-gradient(1200px circle at 10% 10%, rgba(25,135,84,0.35), transparent 60%), linear-gradient(120deg, rgba(0,0,0,0.70), rgba(0,0,0,0.45));
            z-index: -1;
        }

    /* ---------- Wrapper ---------- */
    .login-wrapper {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 28px;
        position: relative;
    }

    /* ---------- Card ---------- */
    .login-card {
        position: relative;
        background: rgba(255,255,255,0.95);
        border-radius: 18px;
        padding: 30px 30px 26px;
        width: 100%;
        max-width: 440px;
        box-shadow: 0 22px 60px rgba(0,0,0,0.40), 0 2px 10px rgba(0,0,0,0.08);
        border: 1px solid rgba(255,255,255,0.7);
        animation: cardIn .35s ease;
    }

    @@keyframes cardIn {
        from {
            opacity: 0;
            transform: translateY(8px) scale(0.99);
        }

        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    .login-title {
        font-weight: 800;
        color: #198754;
        text-align: center;
        font-size: 1.55rem;
        margin: 6px 0 14px;
        letter-spacing: 0.3px;
    }

    /* ---------- Role Toggle ---------- */
    .role-toggle {
        display: flex;
        background: #eef2ef;
        border-radius: 12px;
        padding: 5px;
        gap: 5px;
        margin-bottom: 18px;
        border: 1px solid #e0e6e2;
    }

    .login-option {
        flex: 1;
        border-radius: 10px;
        padding: 12px 10px !important;
        font-weight: 700 !important;
        border: none !important;
        background: transparent !important;
        color: #2f4a3f !important;
        transition: 0.2s ease;
        position: relative;
    }

        .login-option:hover {
            background: rgba(25,135,84,0.08) !important;
            transform: translateY(-1px);
        }

        .login-option.active {
            background-color: #198754 !important;
            color: white !important;
            box-shadow: 0 6px 14px rgba(25,135,84,0.35);
        }

    /* ---------- Inputs ---------- */
    .form-label {
        font-weight: 700;
        color: #1f352d;
        margin-bottom: 6px;
    }

    .form-control.form-control-lg {
        background: #f4f7f5;
        border: 1px solid #d8e2dd;
        border-radius: 10px;
        padding: 12px 14px;
        font-size: 1rem;
        transition: 0.2s ease;
        box-shadow: none !important;
    }

        .form-control.form-control-lg:focus {
            background: #fff;
            border-color: #198754;
            box-shadow: 0 0 0 3px rgba(25,135,84,0.12) !important;
        }

    /* ---------- Submit Button ---------- */
    .btn-success.btn-lg {
        border-radius: 12px;
        font-weight: 800;
        letter-spacing: 0.3px;
        padding: 12px !important;
        box-shadow: 0 10px 24px rgba(25,135,84,0.28);
        transition: 0.2s ease;
    }

        .btn-success.btn-lg:hover {
            transform: translateY(-1px);
            box-shadow: 0 14px 28px rgba(25,135,84,0.32);
        }

    /* ---------- Alerts ---------- */
    .alert {
        border-radius: 10px;
        font-weight: 600;
    }

    /* ---------- Small footer ---------- */
    .login-footer {
        text-align: center;
        font-size: 0.85rem;
        color: #6b7d74;
        margin-top: 14px;
        font-weight: 600;
    }

    /* ======================================================
           LOADING OVERLAY + SPINNER
           ====================================================== */

    .loading-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0,0,0,0.55);
        display: none; /* hidden by default */
        align-items: center;
        justify-content: center;
        z-index: 9999;
        backdrop-filter: blur(3px);
    }

    .loading-box {
        background: rgba(255,255,255,0.96);
        padding: 22px 26px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        gap: 14px;
        box-shadow: 0 12px 30px rgba(0,0,0,0.25);
        font-weight: 800;
        color: #0e4b2e;
        letter-spacing: 0.3px;
    }

    .spinner {
        width: 26px;
        height: 26px;
        border: 3px solid #cfe5db;
        border-top-color: #198754;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
    }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }
</style>


<!-- LOADING OVERLAY HTML -->
<div class="loading-overlay" id="loadingOverlay">
    <div class="loading-box">
        <div class="spinner"></div>
        Logging in...
    </div>
</div>


<div class="login-wrapper">

    <div class="login-card">
        <h3 class="text-center login-title mb-3">Welcome Back</h3>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success text-center fw-semibold">
                @TempData["Success"]
            </div>
        }

        <form method="post" asp-action="Login" id="loginForm">

            <!-- Hidden login type (UNCHANGED) -->
            <input type="hidden" id="loginType" name="loginType" value="user" />

            <!-- ADMIN / USER BUTTONS -->
            <div class="role-toggle">

                <button type="button"
                        id="adminBtn"
                        class="btn login-option"
                        onclick="setLoginType('admin')">
                    Login as Admin
                </button>

                <button type="button"
                        id="userBtn"
                        class="btn login-option active"
                        onclick="setLoginType('user')">
                    Login as User
                </button>

            </div>

            <!-- TOGGLE SCRIPT (UNCHANGED FUNCTIONALITY) -->
            <script>
                function setLoginType(type) {
                    document.getElementById("loginType").value = type;

                    document.getElementById("adminBtn").classList.remove("active");
                    document.getElementById("userBtn").classList.remove("active");

                    if (type === "admin") {
                        document.getElementById("adminBtn").classList.add("active");
                    } else {
                        document.getElementById("userBtn").classList.add("active");
                    }
                }
            </script>


            <!-- Username -->
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input type="text" name="username" class="form-control form-control-lg" required />
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" name="password" class="form-control form-control-lg" required />
            </div>

            <button class="btn btn-success btn-lg w-100 mt-2" type="submit" id="loginBtn">
                Login
            </button>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center fw-semibold mt-3">
                    @ViewBag.Error
                </div>
            }

            <div class="login-footer">
                © @DateTime.Now.Year AgroManagement. All rights reserved.
            </div>
        </form>
    </div>

</div>


<script>
    document.getElementById("loginForm").addEventListener("submit", function (e) {
        e.preventDefault(); 
        document.getElementById("loadingOverlay").style.display = "flex";
        document.getElementById("loginBtn").disabled = true;
        setTimeout(() => {
            e.target.submit(); 
        }, 1000);
    });
</script>

