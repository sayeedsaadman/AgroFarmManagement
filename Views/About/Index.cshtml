@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ====== ABOUT: Styles (mint/emerald, consistent with Shop/Footer) ====== -->
<style>
    html {
        scroll-behavior: smooth;
    }

    .anchor-target {
        scroll-margin-top: 110px;
    }
    /* keeps titles visible below sticky navbar */

    /* Hero */
    #about-hero {
        position: relative;
        width: 100%;
        min-height: 240px;
        background: url('/Images/about-cover.jpg') center/cover no-repeat; /* replace with your image */
    }

        #about-hero::after {
            content: "";
            position: absolute;
            inset: 0;
            background: linear-gradient(180deg, rgba(16,185,129,.18) 0%, rgba(0,0,0,.18) 100%);
        }

        #about-hero .inner {
            position: relative;
            z-index: 1;
            display: grid;
            place-items: center;
            text-align: center;
            padding: 48px 12px;
            min-height: 240px;
        }

        #about-hero h1 {
            color: #062e1a;
            font-weight: 800;
            text-shadow: 0 2px 10px rgba(0,0,0,.15);
        }

        #about-hero p {
            color: #0f5132;
            font-weight: 600;
            opacity: .95;
        }

    /* Section title */
    .section-title {
        font-family: 'Montserrat', system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
        font-weight: 800;
        color: #000;
        line-height: 1.2;
        margin-bottom: 1.25rem;
    }

    /* Cards */
    .mint-card {
        border: 1px solid rgba(16,185,129,.18);
        background: linear-gradient(180deg, rgba(236,253,245,.85) 0%, rgba(255,255,255,.98) 60%), #f0fff4;
        border-radius: 18px;
        box-shadow: 0 5px 18px rgba(16,24,40,.08);
        transition: transform .22s ease, box-shadow .22s ease, border-color .22s ease;
    }

        .mint-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 18px 44px rgba(16,185,129,.20);
            border-color: rgba(16,185,129,.34);
        }

    /* Team avatars */
    .dev-photo {
        width: 96px;
        height: 96px;
        object-fit: cover;
        border-radius: 999px;
        border: 3px solid rgba(16,185,129,.25);
        background: #fff;
    }

    .badge-pill {
        display: inline-flex;
        align-items: center;
        gap: .4rem;
        padding: .35rem .7rem;
        border-radius: 999px;
        background: rgba(16,185,129,.12);
        border: 1px solid rgba(16,185,129,.22);
        color: #065f46;
        font-weight: 700;
        font-size: .875rem;
    }

    /* Accordion */
    .accordion-button {
        font-weight: 600;
        color: #065f46;
    }

        .accordion-button:not(.collapsed) {
            background: #ecfdf5;
            color: #065f46;
        }

    /* Pricing cards */
    .price {
        font-weight: 800;
        font-size: 2rem;
        color: #065f46;
    }

    .mint-btn {
        background: linear-gradient(90deg,#16a34a,#0ea5a4);
        color: #fff;
        border: none;
        border-radius: 11px;
        padding: .6rem 1.1rem;
        box-shadow: 0 8px 18px rgba(14,165,164,.25);
    }

        .mint-btn:hover {
            filter: saturate(1.08);
        }

    /* Lists */
    .list-check li {
        padding-left: 1.4rem;
        position: relative;
        margin: .35rem 0;
    }

        .list-check li::before {
            content: "✓";
            position: absolute;
            left: 0;
            color: #16a34a;
            font-weight: 800;
        }
</style>

<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700;800&display=swap" rel="stylesheet">

<!-- ===== HERO ===== -->
<section id="about-hero">
    <div class="inner container">
        <div>
            <h1 class="display-5 mb-1">About Us</h1>
            <p>A small, focused team. <br /> Building a modern agro experience.</p>
        </div>
    </div>
</section>

<!-- ===== NAV SHORTCUTS (mint/emerald chips) ===== -->
<style>
    /* container spacing */
    .quick-nav {
        --mint: #16a34a;
        --teal: #0ea5a4;
        --ink: #062e1a;
        --leaf: #065f46;
    }

        .quick-nav .chip {
            display: inline-flex;
            align-items: center;
            gap: .55rem;
            padding: .62rem .9rem;
            border-radius: 999px;
            border: 1px solid rgba(16,185,129,.22);
            background: linear-gradient(180deg, rgba(236,253,245,.85) 0%, rgba(255,255,255,.98) 70%), #f0fff4;
            color: var(--leaf);
            font-weight: 700;
            text-decoration: none;
            box-shadow: 0 6px 16px rgba(16,24,40,.06);
            transition: transform .18s ease, box-shadow .18s ease, border-color .18s ease, background .18s ease;
        }

            .quick-nav .chip:hover {
                transform: translateY(-2px);
                box-shadow: 0 16px 34px rgba(16,185,129,.18);
                border-color: rgba(16,185,129,.34);
                background: linear-gradient(90deg, rgba(236,253,245,1) 0%, rgba(236,253,245,1) 100%);
            }

            .quick-nav .chip i {
                display: inline-grid;
                place-items: center;
                width: 28px;
                height: 28px;
                border-radius: 999px;
                background: rgba(16,185,129,.14);
                border: 1px solid rgba(16,185,129,.25);
                color: var(--leaf);
                font-size: 14px;
            }
            /* active chip (when hash matches) */
            .quick-nav .chip.active {
                color: #fff;
                border-color: transparent;
                background: linear-gradient(90deg, var(--mint), var(--teal));
                box-shadow: 0 12px 28px rgba(14,165,164,.28);
            }

                .quick-nav .chip.active i {
                    background: rgba(255,255,255,.18);
                    border-color: rgba(255,255,255,.35);
                    color: #fff;
                }
</style>

<nav class="container mt-3 quick-nav">
    <div class="d-flex flex-wrap gap-2 justify-content-center">
        <a class="chip text-decoration-none" href="#FAQ">
            <i class="bi bi-question-circle"></i> FAQ
        </a>
        <a class="chip text-decoration-none" href="#RefundPolicy">
            <i class="bi bi-arrow-repeat"></i> Refund & Return
        </a>
        <a class="chip text-decoration-none" href="#Terms">
            <i class="bi bi-file-earmark-text"></i> Terms & Conditions
        </a>
        <a class="chip text-decoration-none" href="#Privacy">
            <i class="bi bi-shield-lock"></i> Privacy Policy
        </a>
    </div>
</nav>

<!-- Optional: highlight the current chip by URL hash & on click -->
<script>
    (function(){
      const chips = document.querySelectorAll('.quick-nav .chip');
      function setActive(hash){
        chips.forEach(c => c.classList.toggle('active', c.getAttribute('href') === hash));
      }
      setActive(location.hash || '');
      chips.forEach(c => c.addEventListener('click', () => setTimeout(() => setActive(location.hash), 10)));
      window.addEventListener('hashchange', () => setActive(location.hash));
    })();
</script>


