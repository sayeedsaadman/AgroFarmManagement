@model AgroManagement.Models.ViewModels.SalesAnalyticsVM

@{
    ViewData["Title"] = "Sales Report";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var now = DateTime.UtcNow;
}

<div class="container mt-4">

    <!-- Page Header + Download -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2 mb-3">
        <div>
            <h2 class="mb-0">Sales Report</h2>
        </div>

        <form class="d-flex gap-2" method="get" action="/AdminSales/MonthlyPdf">
            <input type="number"
                   class="form-control"
                   style="max-width:110px;"
                   name="year"
                   value="@now.Year"
                   min="2000"
                   max="2100" />

            <select class="form-select" style="max-width:160px;" name="month">
                @for (int m = 1; m <= 12; m++)
                {
                    <option value="@m" selected="@(m == now.Month)">
                        @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(m)
                    </option>
                }
            </select>

            <button class="btn btn-success" type="submit">
                <i class="bi bi-download me-1"></i> Download PDF
            </button>
        </form>
    </div>

    <!-- Summary Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <div class="text-muted mb-1">Today</div>
                    <div class="display-6 fw-bold">৳ @Model.TodayTotal</div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <div class="text-muted mb-1">This Week</div>
                    <div class="display-6 fw-bold">৳ @Model.WeekTotal</div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <div class="text-muted mb-1">This Month</div>
                    <div class="display-6 fw-bold">৳ @Model.MonthTotal</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Products -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <span class="fw-semibold">Most Sold Products</span>
            
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width:60px;">#</th>
                        <th>Product</th>
                        <th style="width:140px;" class="text-center">Qty Sold</th>
                        <th style="width:180px;" class="text-end">Revenue</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model.TopProducts == null || !Model.TopProducts.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">
                                No sales found yet.
                            </td>
                        </tr>
                    }
                    else
                    {
                        var i = 1;
                        foreach (var p in Model.TopProducts)
                        {
                            <tr>
                                <td class="text-muted">@i</td>
                                <td class="fw-semibold">@p.ProductName</td>
                                <td class="text-center">
                                    <span class="badge bg-primary">@p.Quantity</span>
                                </td>
                                <td class="text-end fw-bold">৳ @p.Revenue</td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
