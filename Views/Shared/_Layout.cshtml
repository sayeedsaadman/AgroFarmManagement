@{
    var appName = "SPESH AGRO";
    var userType = Context.Session.GetString("UserType");
    var userName = Context.Session.GetString("UserName");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - @appName</title>

    <!-- Bootstrap(CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Animations -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    <!-- Tabulator -->
    <link href="https://unpkg.com/tabulator-tables@5.5.0/dist/css/tabulator.min.css" rel="stylesheet">

    <!-- Select2 -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <!-- Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- AOS Animation Library -->
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@600;700;800&display=swap" rel="stylesheet">



</head>
<!-- AOS Animation Script -->
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>

<body class="d-flex flex-column min-vh-100">

    <!-- NAVBAR STYLE -->
    <style>
        /* 3 equal sections on lg+ */
        @@media (min-width: 992px) {
            .nav-grid {
                display: grid;
                grid-template-columns: 1fr 1fr 1fr; /* equal space */
                align-items: center;
            }

            .nav-left {
                justify-self: start;
            }

            .nav-center {
                justify-self: center;
            }

            .nav-right {
                justify-self: end;
            }

            .nav-toggle {
                display: none;
            }
            /* hide toggler on lg+ */
        }
    </style>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top nav-glass shadow-sm">
        <div class="container py-1 nav-grid">

            <!-- LEFT: Brand -->
            <div class="nav-left">
                <a class="navbar-brand d-flex align-items-center gap-2" href="@Url.Action("Index", "Home")">
                    <span class="brand-logo">
                        <img src="~/Images/Spesh.png"
                             alt="Logo" />
                    </span>
                    <span class="brand-text">@appName</span>
                </a>
            </div>

            <!-- Toggler (stays visible on small screens) -->
            <button class="navbar-toggler border-0 nav-toggle" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- CENTER: Links -->
            <div id="mainNav" class="collapse navbar-collapse justify-content-center nav-center">
                <ul class="navbar-nav nav-pills gap-lg-2 gap-1 mt-3 mt-lg-0">
                    <li class="nav-item">
                        <a class="nav-link nav-link-pill" href="@Url.Action("Index", "Home")">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-pill" href="#customer-reviews">Review</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-pill nav-shop-glow" href="@Url.Action("Shop", "Product")">Shop</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-pill" href="#about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-pill" href="#contact">Contact</a>
                    </li>
                </ul>
            </div>

            <!-- RIGHT: Auth/User -->
            <div class="collapse navbar-collapse justify-content-end mt-3 mt-lg-0 nav-right">
                @if (userType == null)
                {
                    <div class="d-flex gap-2">
                        <a asp-controller="Auth" asp-action="Login" class="btn btn-light btn-sm px-3 fw-semibold">Login</a>
                        <a asp-controller="Auth" asp-action="Register" class="btn btn-warning btn-sm px-3 fw-semibold">Register</a>
                    </div>
                }
                else if (userType == "Customer")
                {
                    <ul class="navbar-nav me-2">
                        <li class="nav-item">
                            <a class="nav-link nav-link-pill" asp-controller="Customer" asp-action="Dashboard">Dashboard</a>
                        </li>
                    </ul>

                    <div class="user-chip me-2">
                        <img src="https://cdn-icons-png.flaticon.com/512/149/149071.png" alt="User" />
                        <span>@userName</span>
                    </div>

                    <a asp-controller="Auth" asp-action="Logout" class="btn btn-danger btn-sm px-3 fw-semibold">Logout</a>
                }
                else if (userType == "Admin")
                {
                    <ul class="navbar-nav me-2">
                        <li class="nav-item">
                            <a class="nav-link nav-link-pill" asp-controller="Admin" asp-action="Dashboard">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-pill" asp-controller="Admin" asp-action="Products">Products</a>
                        </li>
                    </ul>

                    <div class="user-chip me-2">
                        <img src="https://cdn-icons-png.flaticon.com/512/149/149071.png" alt="User" />
                        <span>@userName</span>
                    </div>

                    <a asp-controller="Auth" asp-action="Logout" class="btn btn-danger btn-sm px-3 fw-semibold">Logout</a>
                }
                else
                {
                    <div class="user-chip me-2">
                        <img src="https://cdn-icons-png.flaticon.com/512/149/149071.png" alt="User" />
                        <span>@userName (@userType)</span>
                    </div>

                    <a asp-controller="Auth" asp-action="Logout" class="btn btn-danger btn-sm px-3 fw-semibold">Logout</a>
                }
            </div>

        </div>
    </nav>

    <style>
        /* 3 equal sections on lg+ */
        @@media (min-width: 992px) {
            .nav-grid {
                display: grid;
                grid-template-columns: 1fr 1fr 1fr; /* equal space */
                align-items: center;
            }

            .nav-left {
                justify-self: start;
            }

            .nav-center {
                justify-self: center;
            }

            .nav-right {
                justify-self: end;
            }

            .nav-toggle {
                display: none;
            }
            /* hide toggler on lg+ */
        }
    </style>


    <style>
        /* ===== Navbar Base ===== */
        .nav-glass {
            background: linear-gradient(90deg, #0f5132, #198754, #0f5132);
            backdrop-filter: blur(8px);
            padding-top: .6rem;
            padding-bottom: .6rem;
        }

        .brand-logo {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: #fff;
            padding: 3px;
            display: grid;
            place-items: center;
            box-shadow: 0 2px 8px rgba(0,0,0,.2);
        }

            .brand-logo img {
                width: 100%;
                height: 100%;
                border-radius: 50%;
                object-fit: cover;
            }

        .brand-text {
            letter-spacing: .5px;
            font-family: "Poppins", "Segoe UI", sans-serif;
            font-weight: 800;
            letter-spacing: .8px;
            font-size: 1.35rem;
            color: #fff;
        }

        .nav-link-pill {
            color: rgba(255,255,255,.9) !important;
            padding: .45rem .9rem !important;
            border-radius: 999px;
            transition: .2s ease;
            font-weight: 600;
        }

            .nav-link-pill:hover {
                background: rgba(255,255,255,.15);
                transform: translateY(-1px);
            }

        /* remove yellow active bg completely */
        .nav-pills .nav-link.active {
            background: transparent !important;
            color: rgba(255,255,255,.95) !important;
            box-shadow: none !important;
        }

        /* ===== SHOP: static black border + rotating white glow trace ===== */
        .nav-shop-glow {
            position: relative;
            border-radius: 999px;
            background: transparent;
            border: 2px solid #000;
            z-index: 0;
            overflow: visible;
        }

            .nav-shop-glow::before {
                content: "";
                position: absolute;
                inset: -2px;
                border-radius: 999px;
                padding: 2px;
                background: conic-gradient( from 0deg, transparent 0deg, transparent 320deg, rgba(255,255,255,0.1) 330deg, rgba(255,255,255,1) 345deg, rgba(255,255,255,0.1) 360deg );
                -webkit-mask: linear-gradient(#000 0 0) content-box, linear-gradient(#000 0 0);
                -webkit-mask-composite: xor;
                mask-composite: exclude;
                animation: shopTrace 2.0s linear infinite;
                filter: blur(0.6px) drop-shadow(0 0 6px rgba(255,255,255,0.95));
                pointer-events: none;
                z-index: 2;
            }

        @@keyframes shopTrace {
            to

        {
            transform: rotate(360deg);
        }

        }

        .nav-shop-glow:hover {
            background: rgba(255,255,255,.12);
        }

        /* ===== user chip ===== */
        .user-chip {
            display: flex;
            align-items: center;
            gap: .5rem;
            background: rgba(255,255,255,.15);
            padding: .35rem .6rem;
            border-radius: 999px;
            color: #fff;
            font-weight: 600;
        }

            .user-chip img {
                width: 30px;
                height: 30px;
                border-radius: 50%;
                object-fit: cover;
                border: 2px solid rgba(255,255,255,.7);
            }
    </style>




    <!-- MAIN CONTENT -->
    <main class="flex-grow-1">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-success text-white text-center py-3 mt-5">
        <div class="container">
            © @DateTime.Now.Year SPESH AGRO Farm Management System. All rights reserved.
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Tabulator -->
    <script src="https://unpkg.com/tabulator-tables@5.5.0/dist/js/tabulator.min.js"></script>

    <!-- XLSX Support -->
    <script src="https://oss.sheetjs.com/sheetjs/xlsx.full.min.js"></script>

    @RenderSection("Scripts", required: false)

    <script>
        // Initialize AOS
        AOS.init();

        // Function to animate the numbers
        const countUp = (element, target) => {
            let start = 0;
            const duration = 2000; // Duration of animation in ms
            const stepTime = Math.abs(Math.floor(duration / target));
            const interval = setInterval(() => {
                start += 1;
                element.innerText = start + "+";
                if (start === target) clearInterval(interval);
            }, stepTime);
        };

        // Trigger number animation on scroll
        document.addEventListener('DOMContentLoaded', function () {
            const animals = document.getElementById('animals');
            const milk = document.getElementById('milk');
            const experience = document.getElementById('experience');
            const customers = document.getElementById('customers');

            // When the statistics section comes into view, animate the numbers
            const observer = new IntersectionObserver(entries => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        countUp(animals, 50); // 50+ Healthy Animals
                        countUp(milk, 150); // 150L+ Milk Produced Daily
                        countUp(experience, 20); // 20+ Years of Farming Experience
                        countUp(customers, 300); // 300+ Satisfied Customers
                        observer.disconnect(); // Stop watching after animation
                    }
                });
            }, { threshold: 0.5 });

            observer.observe(document.querySelector('#stats'));
        });
    </script>

</body>
</html>
