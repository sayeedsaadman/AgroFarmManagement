        }

            .nav-link-pill:hover {
                background: rgba(255,255,255,.15);
                transform: translateY(-1px);
            }

        /* remove yellow active bg completely */
        .nav-pills .nav-link.active {
            background: transparent !important;
            color: rgba(255,255,255,.95) !important;
            box-shadow: none !important;
        }

        /* ===== SHOP: static black border + rotating white glow trace ===== */
        .nav-shop-glow {
            position: relative;
            border-radius: 999px;
            background: transparent;
            border: 2px solid #000;
            z-index: 0;
            overflow: visible;
        }

        /* Keep the glow wrapped around "Shop" in the collapsed (mobile) navbar */
        @@media (max-width: 991.98px) {
            .navbar-nav .nav-shop-glow {
                display: inline-flex !important;
                width: max-content !important; /* shrink to fit content */
                align-self: center; /* keep it centered in the dropdown */
                margin-left: auto;
                margin-right: auto;
            }
        }


        .nav-shop-glow::before {
            content: "";
            position: absolute;
            inset: -2px;
            border-radius: 999px;
            padding: 2px;
            background: conic-gradient( from 0deg, transparent 0deg, transparent 320deg, rgba(255,255,255,0.1) 330deg, rgba(255,255,255,1) 345deg, rgba(255,255,255,0.1) 360deg );
            -webkit-mask: linear-gradient(#000 0 0) content-box, linear-gradient(#000 0 0);
            -webkit-mask-composite: xor;
            mask-composite: exclude;
            animation: shopTrace 2.0s linear infinite;
            filter: blur(0.6px) drop-shadow(0 0 6px rgba(255,255,255,0.95));
            pointer-events: none;
            z-index: 2;
        }

        @@keyframes shopTrace {
            to {
                transform: rotate(360deg);
            }
        }

        .nav-shop-glow:hover {
            background: rgba(255,255,255,.12);
        }

        /* ===== user chip ===== */
        .user-chip {
            display: flex;
            align-items: center;
            gap: .5rem;
            background: rgba(255,255,255,.15);
            padding: .35rem .6rem;
            border-radius: 999px;
            color: #fff;
            font-weight: 600;
