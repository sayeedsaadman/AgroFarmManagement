@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin Panel - SPESH AGRO</title>
    <link rel="stylesheet" href="https://unpkg.com/tabulator-tables@5.5.2/dist/css/tabulator.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://unpkg.com/tabulator-tables@5.5.2/dist/css/tabulator.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="https://unpkg.com/tabulator-tables@5.5.2/dist/css/tabulator.min.css" />


    <style>
        body {
            margin: 0;
            overflow-x: hidden;
            background: #f5f5f5;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background: #198754;
            color: white;
            position: fixed;
            left: 0;
            top: 0;
            padding-top: 30px;
            overflow-y: auto; /* scroll sidebar */
            overflow-x: hidden;
        }

            .sidebar a {
                display: block;
                padding: 12px 20px;
                font-size: 17px;
                color: white;
                text-decoration: none;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    background: #145f3b;
                }

            /* optional: make scrollbar not shift layout */
            .sidebar::-webkit-scrollbar {
                width: 10px;
            }




        /* RIGHT CONTENT */
        .admin-content {
            margin-left: 250px;
            padding: 30px;
        }

        /* Dashboard image center */
        .dashboard-center {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 80vh;
        }
    </style>
</head>
<body>

    <div class="sidebar">

        <h4 class="text-center fw-bold">Admin Panel</h4>

        <a href="/Admin/Dashboard"><i class="bi bi-grid-fill me-2"></i> Dashboard</a>

        <!-- Animals -->
        <a href="/Animals/Index"><i class="bi bi-list-ul me-2"></i> Manage Animals</a>

        <a href="@Url.Action("Index", "Animals", new { open = "create" })">
            <i class="bi bi-plus-circle me-2"></i> Add New Animal
        </a>

        <a asp-controller="AdminHealth" asp-action="HealthTracker">
            Animal Health Tracker
        </a>

        <a asp-controller="AdminHealth" asp-action="HealthDashboard">
            Health Dashboard
        </a>

        <!-- Users -->
        <a asp-controller="Admin" asp-action="ManageUsers">
            <i class="bi bi-people-fill me-2"></i> Manage Users
        </a>

        <!-- Products -->
        <a href="/Admin/Products">Manage Products</a>

        <hr />

        <!-- Employees -->
        <a asp-controller="Employees" asp-action="Index">
            <i class="bi bi-person-badge-fill me-2"></i> Employee Management
        </a>

        <a asp-controller="AdminTaskManagement" asp-action="Index">
            Task Management
        </a>

        <a asp-controller="Employees" asp-action="Create">
            <i class="bi bi-person-plus-fill me-2"></i> Add Employee
        </a>

        <a asp-controller="AdminSales" asp-action="Index">
            Sales Report
        </a>

        <a asp-controller="AdminExpense" asp-action="Index">
            Expense Report
        </a>

        <a href="/Auth/Logout">
            <i class="bi bi-box-arrow-right me-2"></i> Logout
        </a>

    </div>




    <!-- MAIN CONTENT -->
    <div class="admin-content">
        @RenderBody()
    </div>
    <script src="https://unpkg.com/tabulator-tables@5.5.2/dist/js/tabulator.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/tabulator-tables@5.5.2/dist/js/tabulator.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://unpkg.com/tabulator-tables@5.5.2/dist/js/tabulator.min.js"></script>
    <script src="https://unpkg.com/tabulator-tables@5.5.2/dist/js/tabulator.min.js"></script>


    @RenderSection("Scripts", required: false)

</body>
</html>
