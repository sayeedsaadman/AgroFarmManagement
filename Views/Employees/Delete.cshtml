@model AgroManagement.Models.Employee
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-danger mb-3">Delete Employee</h2>

    <div class="alert alert-warning">
        Are you sure you want to delete this employee?
    </div>

    <div class="card p-3 mb-3">
        <p><strong>Name:</strong> @Model.EmployeeName</p>
        <p><strong>ID:</strong> @Model.EmployeeCode</p>
        <p><strong>Number:</strong> @Model.EmployeeNumber</p>
        <p><strong>Salary:</strong> @Model.Salary</p>
        <p><strong>Address:</strong> @Model.Address</p>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.EmployeeCode" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
