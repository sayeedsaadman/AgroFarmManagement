@model AgroManagement.Models.ViewModels.AnimalLifecyclePageVM
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Animal Lifecycle Management</h2>
       
    </div>

    @if (TempData["success"] != null)
    {
        <div class="alert alert-success">@TempData["success"]</div>
    }

    <form asp-action="Save" method="post">
        @Html.AntiForgeryToken()

        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th style="width:120px;">Tag</th>
                                <th>Breed</th>
                                <th style="width:130px;">Weight</th>
                                <th style="width:160px;">Status</th>
                                <th>Notes</th>
                                <th style="width:140px;">Last Updated</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Rows.Count; i++)
                            {
                                <tr>
                                    <td>
                                        @Model.Rows[i].TagNumber
                                        <input type="hidden" asp-for="Rows[i].AnimalId" />
                                        <input type="hidden" asp-for="Rows[i].TagNumber" />
                                        <input type="hidden" asp-for="Rows[i].Breed" />
                                        <input type="hidden" asp-for="Rows[i].Weight" />
                                    </td>

                                    <td>@Model.Rows[i].Breed</td>

                                    <td>@Model.Rows[i].Weight</td>

                                    <td>
                                        <select class="form-select form-select-sm" asp-for="Rows[i].Status">
                                            @foreach (var opt in Model.StatusOptions)
                                            {
                                                <option value="@opt">@opt</option>
                                            }
                                        </select>
                                    </td>

                                    <td>
                                        <input class="form-control form-control-sm"
                                               asp-for="Rows[i].Notes"
                                               placeholder="Optional notes..." />
                                    </td>

                                    <td class="text-muted small">
                                        @(string.IsNullOrWhiteSpace(Model.Rows[i].UpdatedOn) ? "-" : Model.Rows[i].UpdatedOn)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="d-flex justify-content-end mt-3">
                    <button type="submit" class="btn btn-success px-4">
                        Save Changes
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>
