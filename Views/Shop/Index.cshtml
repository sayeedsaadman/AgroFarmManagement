<style>
    /* ================= HERO ================= */
    .tp-media {
        position: relative;
        overflow: hidden;
    }

    .buy-btn-overlay {
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%) translateY(10px);
        padding: 12px 26px;
        background: #16a34a;
        color: #fff;
        border: none;
        border-radius: 14px;
        font-weight: 600;
        cursor: pointer;
        opacity: 0;
        transition: all 0.25s ease;

    }

    .tp-card:hover .buy-btn-overlay {
        opacity: 1;
        transform: translate(-50%, -50%) translateY(0);
    }

    .buy-btn-overlay:hover {
        background: #15803d;
    }


    /* optional: show always on mobile (no hover) */
    @@media (max-width: 768px) {
        .buy-btn-overlay

    {
        opacity: 1;
        transform: translateX(-50%) translateY(0);
    }

    }



    #shop-hero {
        position: relative;
        width: 100%;
        min-height: 160px;
        background: linear-gradient(180deg, rgba(16,185,129,0.08), rgba(0,0,0,0.12)), url('/Images/shop-cover.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        margin-top: 0;
    }

        #shop-hero::after {
            content: "";
            position: absolute;
            inset: 0;
            background: rgba(0,0,0,0.25);
        }

        #shop-hero .hero-inner {
            position: relative;
            z-index: 1;
            height: 100%;
            display: grid;
            place-items: center;
            text-align: center;
            padding: 22px 12px;
        }

        #shop-hero .hero-title {
            color: #0b3b22;
            font-weight: 900;
            font-size: 1.8rem;
            letter-spacing: .5px;
            margin: 0 0 .2rem 0;
            text-shadow: 0 2px 8px rgba(0,0,0,.12);
        }

        #shop-hero .hero-subtitle {
            color: #134e35;
            font-weight: 600;
            font-size: 1rem;
            opacity: .95;
        }

    @@media (min-width: 768px) {
        #shop-hero {
            min-height: 210px;
        }

            #shop-hero .hero-title {
                font-size: 2.2rem;
            }
    }

    @@media (min-width: 992px) {
        #shop-hero {
            min-height: 240px;
        }

            #shop-hero .hero-title {
                font-size: 2.4rem;
            }
    }

    /* ================= PRODUCT CARDS ================= */
    #shop-grid .tp-card {
        position: relative;
        border-radius: 18px;
        overflow: hidden;
        background: linear-gradient(180deg, rgba(236,253,245,.85) 0%, rgba(255,255,255,.95) 60%), #f0fff4;
        box-shadow: 0 5px 18px rgba(16,24,40,.08);
        outline: 1px solid rgba(16,185,129,.18);
        transition: transform .22s ease, box-shadow .22s ease, outline-color .22s ease;
    }

        #shop-grid .tp-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 18px 44px rgba(16,185,129,.20);
            outline-color: rgba(16,185,129,.34);
        }

        #shop-grid .tp-card::after {
            content: "";
            position: absolute;
            inset: 0;
            background: rgba(16,185,129,0);
            transition: background .32s ease;
            pointer-events: none;
            z-index: 1;
        }

        #shop-grid .tp-card:hover::after {
            background: rgba(16,185,129,.28);
        }

    #shop-grid .tp-media {
        position: static;
        height: 160px;
        padding: 12px;
        display: grid;
        place-items: center;
        background: radial-gradient(420px 140px at 50% 0, rgba(34,197,94,.12), transparent 60%), #f6fff9;
        border-bottom: 1px solid #e6f6ee;
        overflow: hidden;
    }

        #shop-grid .tp-media img {
            max-height: 120px;
            max-width: 80%;
            object-fit: contain;
            width: auto;
            height: auto;
            display: block;
            margin: 0 auto;
            transition: transform .32s ease, filter .32s ease, opacity .32s ease;
        }

    #shop-grid .tp-card:hover .tp-media img {
        transform: scale(1.04);
        filter: blur(1.5px) saturate(1.05);
        opacity: .93;
    }

    #shop-grid .tp-add {
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%,-40%);
        opacity: 0;
        pointer-events: none;
        padding: .48rem 1.15rem;
        border: none;
        border-radius: 11px;
        background: linear-gradient(90deg,#16a34a,#0ea5a4);
        color: #fff;
        font-weight: 700;
        box-shadow: 0 10px 22px rgba(14,165,164,.35);
        transition: opacity .22s ease, transform .22s ease;
        z-index: 2;
    }

    #shop-grid .tp-card:hover .tp-add {
        opacity: 1;
        pointer-events: auto;
        transform: translate(-50%,-50%);
    }

    #shop-grid .card-title {
        font-size: 1rem;
        font-weight: 700;
        color: #062e1a;
    }

    #shop-grid .tp-price {
        display: inline-block;
        padding: .25rem .65rem;
        font-weight: 700;
        color: #065f46;
        background: rgba(16,185,129,.12);
        border: 1px solid rgba(16,185,129,.18);
        border-radius: 999px;
        font-size: .95rem;
    }

    /* Section headers refined */
    .section-intro {
        font-size: 1.9rem !important;
        font-weight: 900 !important;
        color: #0b3b22 !important;
        letter-spacing: .6px;
        margin-bottom: 22px !important;
