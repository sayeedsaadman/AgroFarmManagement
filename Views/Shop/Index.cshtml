            <script>
                /* ------- FILTERING (CLIENT SIDE) ------- */

                const form = document.getElementById("shop-filters");
                const categorySelect = document.getElementById("categorySelect");

                const priceMin = document.getElementById('priceMin');
                const priceMax = document.getElementById('priceMax');
                const priceFrom = document.getElementById('priceFrom');
                const priceTo   = document.getElementById('priceTo');
                const pMinOut   = document.getElementById('f-price-min');
                const pMaxOut   = document.getElementById('f-price-max');

                const allItems = Array.from(document.querySelectorAll(".shop-item"));
                const allSections = Array.from(document.querySelectorAll(".shop-section"));

                function fmt(n){ return Number(n).toLocaleString(); }

                function syncPriceFromRanges(){
                    if(+priceMin.value > +priceMax.value){ priceMin.value = priceMax.value; }
                    priceFrom.value = priceMin.value;
                    priceTo.value   = priceMax.value;
                    pMinOut.textContent = '৳ ' + fmt(priceMin.value);
                    pMaxOut.textContent = '৳ ' + fmt(priceMax.value);
                }
                function syncPriceFromInputs(){
                    if(+priceFrom.value > +priceTo.value){ priceFrom.value = priceTo.value; }
                    priceMin.value = priceFrom.value;
                    priceMax.value = priceTo.value;
                    pMinOut.textContent = '৳ ' + fmt(priceFrom.value);
                    pMaxOut.textContent = '৳ ' + fmt(priceTo.value);
                }

                function applyFilters(){
                    const cat  = categorySelect.value;
                    const minP = +priceMin.value;
                    const maxP = +priceMax.value;

                    allItems.forEach(item=>{
                        const card = item.querySelector("article");
                        const price = +card.dataset.price;
                        const category = card.dataset.category;

                        const matchCategory = (cat === "all") || (category === cat);
                        const matchPrice    = price >= minP && price <= maxP;

                        item.style.display = (matchCategory && matchPrice) ? "" : "none";
                    });

                    allSections.forEach(sec=>{
                        const visibleAny = [...sec.querySelectorAll(".shop-item")].some(x => x.style.display !== "none");
                        sec.style.display = visibleAny ? "" : "none";
                    });
                }

                priceMin?.addEventListener('input', ()=>{ syncPriceFromRanges(); applyFilters(); });
                priceMax?.addEventListener('input', ()=>{ syncPriceFromRanges(); applyFilters(); });
                priceFrom?.addEventListener('input', ()=>{ syncPriceFromInputs(); applyFilters(); });
                priceTo?.addEventListener('input', ()=>{ syncPriceFromInputs(); applyFilters(); });

                categorySelect?.addEventListener("change", applyFilters);

                form?.addEventListener("submit", function(e){
                    e.preventDefault();
                    applyFilters();
                });

                document.getElementById('resetFilters')?.addEventListener('click', () => {
                    setTimeout(()=>{
                        categorySelect.value = "all";

                        priceMin.value=0;
                        priceMax.value=5000;
                        syncPriceFromRanges();

                        applyFilters();
                    },0);
                });

                // init
                syncPriceFromRanges();
                applyFilters();
            </script>
