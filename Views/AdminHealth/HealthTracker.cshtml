@model AgroManagement.Models.ViewModels.HealthTrackerPageVM
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Animal Health Tracker</h2>

        <form method="get" class="d-flex gap-2" asp-action="HealthTracker">
            <input type="date" class="form-control" name="date" value="@Model.Date" />
            <button class="btn btn-dark" type="submit">Load</button>
        </form>
    </div>

    @if (TempData["success"] != null)
    {
        <div class="alert alert-success">@TempData["success"]</div>
    }

    <form method="post" asp-action="SaveHealthTracker">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Date" />

        <div class="table-responsive">
            <table class="table table-bordered table-striped shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Tag</th>
                        <th>Breed</th>
                        <th>Weight (KG)</th>
                        <th style="width:140px;">Milk (Liters)</th>
                        <th style="width:130px;">Health Checked</th>
                        <th style="width:160px;">Medicine Given</th>
                        <th style="width:220px;">Medicine Name</th>
                        <th style="width:140px;">Dose</th>
                        <th>Notes</th>
                    </tr>
                </thead>

                <tbody>
                    @for (int i = 0; i < Model.Rows.Count; i++)
                    {
                        <tr>
                            <td>
                                @Model.Rows[i].TagNumber
                                <input type="hidden" asp-for="Rows[@i].AnimalId" />
                                <input type="hidden" asp-for="Rows[@i].TagNumber" />
                            </td>

                            <td>
                                @Model.Rows[i].Breed
                                <input type="hidden" asp-for="Rows[@i].Breed" />
                            </td>

                            <td style="width:140px;">
                                <input class="form-control" asp-for="Rows[@i].WeightKg" type="number" step="0.01" min="0" />
                            </td>



                            <td>
                                <input class="form-control" asp-for="Rows[@i].MilkLiters" type="number" step="0.01" min="0" />
                            </td>

                            <td class="text-center">
                                <input class="form-check-input" asp-for="Rows[@i].HealthChecked" type="checkbox" />
                            </td>

                            <td class="text-center">
                                <input class="form-check-input med-toggle" asp-for="Rows[@i].MedicineGiven" type="checkbox" data-row="@i" />
                            </td>

                            <td>
                                <select class="form-select med-name" asp-for="Rows[@i].MedicineName" data-row="@i">
                                    @foreach (var med in Model.Medicines)
                                    {
                                        <option value="@med">@med</option>
                                    }
                                </select>
                            </td>

                            <td>
                                <input class="form-control med-dose" asp-for="Rows[@i].Dose" data-row="@i" />
                            </td>

                            <td>
                                <input class="form-control" asp-for="Rows[@i].Notes" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <button type="submit" class="btn btn-success">Save All</button>
    </form>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
      function syncRow(i) {
        const chk = document.querySelector('.med-toggle[data-row="' + i + '"]');
        const name = document.querySelector('.med-name[data-row="' + i + '"]');
        const dose = document.querySelector('.med-dose[data-row="' + i + '"]');

        if (!chk || !name || !dose) return;

        if (chk.checked) {
          name.disabled = false;
          dose.disabled = false;
          if (!name.value) name.value = "Antibiotic";
        } else {
          name.value = "None";
          dose.value = "";
          name.disabled = true;
          dose.disabled = true;
        }
      }

      const toggles = document.querySelectorAll(".med-toggle");
      toggles.forEach(t => {
        const i = t.getAttribute("data-row");
        syncRow(i);
        t.addEventListener("change", function () { syncRow(i); });
      });
    });
</script>
