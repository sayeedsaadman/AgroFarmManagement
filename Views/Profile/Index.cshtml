@model AgroManagement.Models.ViewModels.ProfileVM

@{
    ViewData["Title"] = "Update Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5" style="max-width:720px;">
    <div class="card border-0 shadow-sm p-4 rounded-4">

        <h2 class="fw-bold mb-3 text-success">Update Profile</h2>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success fw-semibold text-center">
                @TempData["Success"]
            </div>
        }

        <form asp-action="Update" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label class="form-label fw-semibold">Username</label>
                <input asp-for="Username" class="form-control form-control-lg" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Full Name</label>
                <input asp-for="FullName" class="form-control form-control-lg" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Email</label>
                <input asp-for="Email" class="form-control form-control-lg" type="email" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Phone</label>
                <input asp-for="Phone" class="form-control form-control-lg" required />
            </div>

            <button type="submit" class="btn btn-success btn-lg w-100 mt-2">
                Save Changes
            </button>
        </form>

        <hr class="my-4" />

        <!-- Delete Form (hidden submit) -->
        <form id="deleteForm" asp-action="DeleteAccount" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />

            <!-- Button triggers modal -->
            <button type="button"
                    class="btn btn-danger btn-lg w-100"
                    data-bs-toggle="modal"
                    data-bs-target="#deleteModal">
                Delete My Personal Account
            </button>
        </form>

        <!-- ✅ Custom Bootstrap Modal -->
        <div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0 rounded-4 shadow-lg">

                    <!-- Header -->
                    <div class="modal-header bg-danger text-white rounded-top-4">
                        <h5 class="modal-title fw-bold">
                            Confirm Account Deletion
                        </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>

                    <!-- Body -->
                    <div class="modal-body p-4">
                        <p class="mb-2 fw-semibold">
                            Are you sure you want to delete your account?
                        </p>
                        <p class="text-muted small mb-0">
                            This action is permanent and cannot be undone.
                        </p>
                    </div>

                    <!-- Footer -->
                    <div class="modal-footer px-4 pb-4 border-0">
                        <button type="button" class="btn btn-outline-secondary px-4" data-bs-dismiss="modal">
                            Cancel
                        </button>
                        <button type="button" class="btn btn-danger px-4 fw-semibold" onclick="submitDelete()">
                            Yes, Delete
                        </button>
                    </div>

                </div>
            </div>
        </div>

        <script>
            function submitDelete() {
                document.getElementById("deleteForm").submit();
            }
        </script>


    </div>
</div>

<script>
    function confirmDelete() {
        if (confirm("Are you sure you want to delete your account? This cannot be undone.")) {
            document.getElementById("deleteForm").submit();
        }
    }
</script>
