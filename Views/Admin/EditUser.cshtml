@model AgroManagement.Models.User
@using System

@{
    Layout = null;
    var isEdit = Model != null && Model.Id > 0;
    var action = "EditUser";   // only edit, ignore create
}

<form asp-action="@action" method="post" id="userForm">
    @Html.AntiForgeryToken()

    @if (isEdit)
    {
        <input type="hidden" asp-for="Id" />
    }

    <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 d-none" id="valSummary"></div>

    <div class="p-3 border rounded-3 bg-light-subtle">
        <div class="row g-3">

            <!-- Name -->
            <div class="col-12">
                <label asp-for="Name" class="form-label fw-medium">Name</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                    <input asp-for="Name" class="form-control" placeholder="Enter full name" autofocus />
                </div>
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <!-- Phone -->
            <div class="col-12">
                <label asp-for="Phone" class="form-label fw-medium">Phone</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                    <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
                </div>
                <span asp-validation-for="Phone" class="text-danger small"></span>
            </div>

            <!-- Email -->
            <div class="col-12">
                <label asp-for="Email" class="form-label fw-medium">Email</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    <input asp-for="Email" class="form-control" placeholder="Enter email" />
                </div>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <!-- Username -->
            <div class="col-12">
                <label asp-for="Username" class="form-label fw-medium">Username</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                    <input asp-for="Username" class="form-control" placeholder="Enter username" />
                </div>
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>

            <!-- Password Hash -->
            <div class="col-12">
                <label asp-for="PasswordHash" class="form-label fw-medium">Password (Hashed)</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-shield-lock"></i></span>
                    <input asp-for="PasswordHash" class="form-control" placeholder="Password hash" />
                </div>
                <span asp-validation-for="PasswordHash" class="text-danger small"></span>
                <small class="text-muted">This is stored as hash. Admin can edit hash if needed.</small>
            </div>

        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-3">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="offcanvas">
            <i class="bi bi-x-lg"></i> Cancel
        </button>

        <button type="submit" class="btn btn-success px-4" id="submitBtn">
            <span class="btn-text">Save</span>
            <span class="spinner-border spinner-border-sm ms-2 d-none" role="status" aria-hidden="true"></span>
        </button>
    </div>
</form>

<script>
    (function () {
        const hasErrors = document.querySelectorAll(".text-danger:not(:empty)").length > 0;
        const sum = document.getElementById("valSummary");
        if (sum && hasErrors) {
            sum.classList.remove("d-none");
            sum.innerHTML = "<strong>Please fix the errors below.</strong>";
        }
    })();
</script>
