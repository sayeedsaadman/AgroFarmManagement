@{
    ViewData["Title"] = "Add Product Stock";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2>Add Product (Increase Stock)</h2>

    <form method="post" action="/Admin/AddProduct" class="card p-3 mt-3" style="max-width:520px;">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label class="form-label">Select Product</label>
            <select name="key" class="form-select" required>
                @foreach (var p in AgroManagement.Helper.ProductCatalog.All)
                {
                    <option value="@p.Key">@p.Category - @p.Name (@p.UnitLabel) - ৳ @p.Price</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Increase Stock By</label>
            <input type="number" name="qty" class="form-control" min="1" value="1" required />
        </div>

        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" href="/Admin/Products">Back</a>
            <button type="submit" class="btn btn-success">Add</button>
        </div>
    </form>
</div>
