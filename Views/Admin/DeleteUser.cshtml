@model AgroManagement.Models.User

@{
    Layout = null;
}

<div class="alert alert-danger d-flex align-items-start gap-2" role="alert">
    <i class="bi bi-exclamation-triangle-fill fs-4"></i>
    <div>
        <strong>Danger!</strong> This action cannot be undone.
        Deleting this user will permanently remove them from your records.
    </div>
</div>

<div class="p-3 border rounded-3 bg-light-subtle mb-3">
    <div class="row g-3">
        <div class="col-md-6">
            <div class="small text-muted">Name</div>
            <div class="fw-semibold">@Model.Name</div>
        </div>

        <div class="col-md-6">
            <div class="small text-muted">Phone</div>
            <div class="fw-semibold">@Model.Phone</div>
        </div>

        <div class="col-md-6">
            <div class="small text-muted">Email</div>
            <div class="fw-semibold">@Model.Email</div>
        </div>

        <div class="col-md-6">
            <div class="small text-muted">Username</div>
            <div class="fw-semibold">@Model.Username</div>
        </div>
    </div>
</div>

<form asp-action="DeleteUserConfirmed" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="d-flex justify-content-between">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="offcanvas">
            <i class="bi bi-x-lg"></i> Cancel
        </button>

        <button type="submit" class="btn btn-danger px-4" id="submitBtn">
            <span class="btn-text"><i class="bi bi-trash3 me-1"></i> Delete</span>
            <span class="spinner-border spinner-border-sm ms-2 d-none" role="status" aria-hidden="true"></span>
        </button>
    </div>
</form>
