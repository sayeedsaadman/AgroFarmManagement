@model AgroManagement.Models.Animal

@{
    ViewData["Title"] = "Create Animal";

}

<style>
    .page-title {
        font-weight: 700;
        font-size: 30px;
        color: #198754;
        text-shadow: 0px 1px 2px rgba(0,0,0,0.1);
    }

    .card-modern {
        border-radius: 18px;
        background: #ffffff;
        border: none;
        box-shadow: 0px 10px 35px rgba(0,0,0,0.12);
        padding: 30px;
    }

    .label-strong {
        font-weight: 600;
    }

    /* Icon inside input field */
    .input-group-text {
        background-color: #e9f7ef;
        border: none;
        color: #198754;
        font-size: 20px;
    }

    .form-control {
        padding: 10px 15px;
        border-radius: 10px;
        height: 48px;
        font-size: 15px;
    }

        .form-control:focus {
            box-shadow: 0 0 0 0.2rem rgba(25, 135, 84, 0.25);
            border-color: #198754;
        }

    .btn-modern {
        border-radius: 10px;
        font-weight: 600;
        font-size: 16px;
        padding: 10px 20px;
    }

</style>

<div class="container mt-4 mb-5">
    <h2 class="page-title text-center mb-4">Create New Animal</h2>

    <div class="row justify-content-center">
        <div class="col-md-7">

            <div class="card-modern">

                <h5 class="text-secondary fw-bold mb-3">Animal Information</h5>
                <hr class="mb-4" />

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Tag Number -->
                    <div class="mb-3">
                        <label asp-for="TagNumber" class="label-strong"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-hash"></i></span>
                            <input asp-for="TagNumber" class="form-control" />
                        </div>
                        <span asp-validation-for="TagNumber" class="text-danger small"></span>
                    </div>

                    <!-- Breed -->
                    <div class="mb-3">
                        <label asp-for="Breed" class="label-strong"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-droplet-fill"></i></span>
                            <input asp-for="Breed" class="form-control" />
                        </div>
                        <span asp-validation-for="Breed" class="text-danger small"></span>
                    </div>

                    <!-- Date of Birth -->
                    <div class="mb-3">
                        <label asp-for="DateOfBirth" class="label-strong"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-calendar-date-fill"></i></span>
                            <input asp-for="DateOfBirth" type="date" class="form-control" />
                        </div>
                        <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                    </div>

                    <!-- Weight -->
                    <div class="mb-3">
                        <label asp-for="Weight" class="label-strong"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-speedometer2"></i></span>
                            <input asp-for="Weight" type="number" step="0.01" class="form-control" />
                        </div>
                        <span asp-validation-for="Weight" class="text-danger small"></span>
                    </div>

                    <!-- Purchase Price -->
                    <div class="mb-3">
                        <label asp-for="PurchasePrice" class="label-strong"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-currency-dollar"></i></span>
                            <input asp-for="PurchasePrice" type="number" step="0.01" class="form-control" />
                        </div>
                        <span asp-validation-for="PurchasePrice" class="text-danger small"></span>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-modern">
                            <i class="bi bi-arrow-left"></i> Back
                        </a>

                        <button type="submit" class="btn btn-success btn-modern">
                            <i class="bi bi-check-circle-fill"></i> Create
                        </button>
                    </div>

                </form>

            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
