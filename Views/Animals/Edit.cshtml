@model AgroManagement.Models.Animal

@{
    ViewData["Title"] = "Edit Animal";

}

<!-- CUSTOM STYLING -->
<style>
    .page-title {
        font-weight: 700;
        font-size: 28px;
        color: #198754;
        text-align: center;
        margin-bottom: 25px;
        text-shadow: 0px 1px 2px rgba(0,0,0,0.15);
    }

    .edit-card {
        border-radius: 18px;
        background: #ffffff;
        border: none;
        box-shadow: 0px 10px 35px rgba(0,0,0,0.12);
        padding: 30px;
    }

    .form-label-icon {
        font-weight: 600;
        display: flex;
        align-items: center;
        margin-bottom: 6px;
        color: #6c757d;
    }

        .form-label-icon i {
            margin-right: 8px;
            color: #198754;
        }

    .form-control {
        border-radius: 10px;
        padding: 10px 12px;
        box-shadow: inset 0px 1px 3px rgba(0,0,0,0.05);
        transition: 0.2s;
    }

        .form-control:focus {
            border-color: #198754;
            box-shadow: 0px 0px 6px rgba(25,135,84,0.35);
        }

    .btn-modern {
        border-radius: 10px;
        font-weight: 600;
        padding: 10px 22px;
        font-size: 16px;
    }
</style>

<div class="container mt-4 mb-5">

    <h2 class="page-title">Edit Animal</h2>

    <div class="row justify-content-center">
        <div class="col-md-7">

            <div class="edit-card">

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="Id" />

                    <!-- TAG NUMBER -->
                    <div class="mb-3">
                        <label asp-for="TagNumber" class="form-label-icon">
                            <i class="bi bi-hash"></i> Tag Number
                        </label>
                        <input asp-for="TagNumber" class="form-control" />
                        <span asp-validation-for="TagNumber" class="text-danger small"></span>
                    </div>

                    <!-- BREED -->
                    <div class="mb-3">
                        <label asp-for="Breed" class="form-label-icon">
                            <i class="bi bi-droplet-fill"></i> Breed
                        </label>
                        <input asp-for="Breed" class="form-control" />
                        <span asp-validation-for="Breed" class="text-danger small"></span>
                    </div>

                    <!-- DATE OF BIRTH -->
                    <div class="mb-3">
                        <label asp-for="DateOfBirth" class="form-label-icon">
                            <i class="bi bi-calendar-date-fill"></i> Date of Birth
                        </label>
                        <input asp-for="DateOfBirth" class="form-control" type="date" />
                        <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                    </div>

                    <!-- WEIGHT -->
                    <div class="mb-3">
                        <label asp-for="Weight" class="form-label-icon">
                            <i class="bi bi-speedometer2"></i> Weight (KG)
                        </label>
                        <input asp-for="Weight" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Weight" class="text-danger small"></span>
                    </div>

                    <!-- PURCHASE PRICE -->
                    <div class="mb-3">
                        <label asp-for="PurchasePrice" class="form-label-icon">
                            <i class="bi bi-currency-dollar"></i> Purchase Price
                        </label>
                        <input asp-for="PurchasePrice" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="PurchasePrice" class="text-danger small"></span>
                    </div>

                    <!-- BUTTONS -->
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-modern">
                            <i class="bi bi-arrow-left"></i> Back
                        </a>

                        <button type="submit" class="btn btn-success btn-modern">
                            <i class="bi bi-check2-circle"></i> Save Changes
                        </button>
                    </div>
                </form>

            </div>

        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
