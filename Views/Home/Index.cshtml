    }

        #top-products .tp-media img {
            max-height: 120px;
            max-width: 80%;
            object-fit: contain;
            width: auto;
            height: auto;
            display: block;
            margin: 0 auto;
            transition: transform .32s ease;
        }

    #top-products .tp-card:hover .tp-media img {
        transform: scale(1.04);
    }

    /* Text + price */
    #top-products .card-title {
        font-size: 1rem;
        font-weight: 700;
        color: #062e1a
    }

    #top-products .tp-price {
        display: inline-block;
        padding: .25rem .65rem;
        font-weight: 700;
        color: #065f46;
        background: rgba(16,185,129,.12); /* emerald tint */
