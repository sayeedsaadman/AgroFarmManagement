<!-- STATISTICS SECTION -->
<section class="py-5 bg-light" id="stats">
    <style>
        /* Global Styles for the Stats Section */
        .stat-card {
            background-color: #fff; /* White background for a clean look */
            border: 2px solid #f0f0f0; /* Soft border for subtle elegance */
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1); /* Soft shadow for depth */
            transition: all 0.3s ease-in-out; /* Smooth transition for hover effect */
            border-radius: 12px; /* Rounded corners */
            padding: 20px;
        }

            /* On Hover Effect: Elevate card and add contrast */
            .stat-card:hover {
                box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.15);
                transform: translateY(-8px); /* Slight lift effect */
            }

        /* Icon Style: Adds color and ensures consistency */
        .icon {
            font-size: 60px;
            color: #198754; /* Green color for a fresh, eco-friendly look */
            transition: color 0.3s ease;
        }

        /* Icon Hover Effect */
        .stat-card:hover .icon {
            color: #2b6e44; /* Darker green on hover */
        }

        /* Number Styling */
        .number {
            font-size: 36px;
            font-weight: 700;
            color: #333; /* Dark gray text for a premium feel */
